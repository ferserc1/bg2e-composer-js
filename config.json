{
    "appName": "bg2e-composer",
    "templateName": "default",
    "toolbar": [
        {
            "type":"button",
            "icon":"open-file",
            "name":"Open",
            "command":"openScene"
        },
        {
            "type":"separator"
        },
        {
            "type":"button",
            "icon":"undo",
            "name":"Undo",
            "command":"undo"
        },
        {
            "type":"button",
            "icon":"redo",
            "name":"Redo",
            "command":"redo"
        },
        {
            "type":"separator"
        },
        {
            "type":"button",
            "icon":"gizmo-select",
            "name":"Select",
            "command":"gizmoSelect"
        },
        {
            "type":"button",
            "icon":"gizmo-translate",
            "name":"Translate",
            "command":"gizmoTranslate"
        },
        {
            "type":"button",
            "icon":"gizmo-rotate",
            "name":"Rotate",
            "command":"gizmoRotate"
        },
        {
            "type":"button",
            "icon":"gizmo-scale",
            "name":"Scale",
            "command":"gizmoScale"
        },
        {
            "type":"button",
            "icon":"gizmo-transform",
            "name":"Transform",
            "command":"gizmoTransform"
        },
        {
            "type":"separator"
        },
        {
            "type":"button",
            "icon":"scene-inspector",
            "name":"Scene inspector",
            "command":"showSceneEditor"
        },
        {
            "type":"button",
            "icon":"plist-inspector",
            "name":"Model inspector",
            "command":"showModelEditor"
        },
        {
            "type":"separator"
        },
        {
            "type":"button",
            "icon":"play",
            "name":"Play",
            "command":"play",
            "allowOnLocked":true
        },
        {
            "type":"button",
            "icon":"pause",
            "name":"Pause",
            "command":"pause",
            "allowOnLocked":true
        },
        {
            "type":"button",
            "icon":"stop",
            "name":"Stop",
            "command":"stop",
            "allowOnLocked":true
        }
    ]
}